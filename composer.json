{
    "name": "spryker-sdk/ai-dev",
    "type": "library",
    "description": "Spryker AI Dev module",
    "license": "proprietary",
    "require": {
        "php": ">=8.3",
        "spryker/kernel": "^3.30.0",
        "spryker/transfer": "^3.27.0",
        "php-mcp/server": "^3.3"
    },
    "require-dev": {
        "spryker/code-sniffer": "*",
        "spryker/testify": "*",
        "spryker/development": "*"
    },
    "autoload": {
        "psr-4": {
            "SprykerSdk\\": "src/SprykerSdk/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SprykerSdkTest\\": "tests/SprykerSdkTest/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs -p -s --standard=vendor/spryker/development/ruleset.xml src/",
        "architecture-check": "phpmd src/ text vendor/spryker/development/resources/phpmd/ruleset.xml --minimumpriority 2",
        "cs-fix": "phpcbf -p --standard=vendor/spryker/development/ruleset.xml src/",
        "stan": "phpstan analyse src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
